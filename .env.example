
# === Email (IMAP) ===
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USERNAME=your_email@example.com
IMAP_PASSWORD=your_app_password
IMAP_MAILBOX=INBOX
# Examples: UNSEEN, ALL, FROM "billing@company.com" SINCE 1-Aug-2025
IMAP_SEARCH=UNSEEN

# === Storage ===
# If empty, defaults to ~/AutoDocs
BASE_DIR=
# If empty, defaults to BASE_DIR/autodoc.db
DB_PATH=

# === Behavior ===
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.csv,.zip,.rar,.7z,.png,.jpg,.jpeg
MAX_EMAILS_PER_FETCH=200
MARK_SEEN=true
DELETE_AFTER_SAVE=false

# === UI ===
LOCALE=uk_UA
